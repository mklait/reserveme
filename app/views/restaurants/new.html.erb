<h1> Add a new Restaurant </h1>
<%= form_with scope: :restaurant, url: restaurants_path, local: true do |form| %>
	<p>
		<%= form.label :name %> <br>
		<%= form.text_field :name %>
	</p>

	<p>
		<%= form.label :cuisine %> <br>
		<%= form.text_field :cuisine %>
	</p>

	<p>
		<%= form.label :address %> <br>
		<%= form.text_field :address %>
	</p>

	<p>
	<%= form.submit %>
	</p>

	<% end %>